BoxLayout:
    orientation: 'vertical'
    Menu:
        size_hint_y: .1
        manager: screen_manager
    ScreenManagement:
        size_hint_y: .9
        id: screen_manager
<Menu>:
    orientation: "vertical"
    ActionBar:
        top: 0
        ActionView:
            ActionPrevious:
            ActionButton:
                text: 'Главная'
                on_press: root.manager.current = 'screen_home'
            ActionButton:
                text: 'Профиль'
                on_press: root.manager.current = 'screen_profile'
            ActionButton:
                text: 'Логин'
                on_press: root.manager.current = 'screen_login'
            ActionButton:
                text: 'Регистрация'
                on_press: root.manager.current = 'screen_register'

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'

<ScreenManagement>:
    id: screen_manager
    HomeScreen:
        name: 'screen_home'
        manager: 'screen_manager'
    LoginScreen:
        name: 'screen_login'
        manager: 'screen_manager'
    RegisterScreen:
        name: 'screen_register'
        manager: 'screen_manager'
    ProfileScreen:
        name: 'screen_profile'
        manager: 'screen_manager'


<LoginForm>:
    email: input
    password: input
    Label:
        id: login_label
        pos: root.center_x - 50, 400
        text: "Login"
        color: 'blue'
        font_size: 30
    TextInput:
        id: email
        hint_text: "Email"
        pos: root.center_x - 100, 350
        size: 200, 30
    TextInput:
        id: password
        hint_text: "Password"
        pos: root.center_x - 100, 300
        size: 200, 30
        password: True
    Button:
        size: 100,10
        pos: root.center_x - 50, 250
        text: 'Login'
        on_release: root.login_user()

<RegisterForm>:
    email: input
    password: input
    Label:
        id: register_label
        pos: root.center_x - 50, 400
        text: "Register"
        color: 'blue'
        font_size: 30
    TextInput:
        id: email
        hint_text: "Email"
        pos: root.center_x - 100, 350
        size: 200, 30
    TextInput:
        id: password
        hint_text: "Password"
        pos: root.center_x - 100, 300
        size: 200, 30
        password: True
    Button:
        size: 100,10
        pos: root.center_x - 50, 250
        text: 'Register'
        on_release: root.register_user()
    Label:
        id: registration_status
        pos: root.center_x - 50, 150
        text: root.register_label